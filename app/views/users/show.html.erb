<section class="user-section">
  <h2><%= "Name: #{@user.name}" %> <span><%= get_is_my_friend_or_request(@user) %></span></h2>
  <% if owner(@user)%>
   <div>
        <span>Pending friend request(s): <%=@user.friend_requests.count %></span>
        <%@user.friend_requests.each do |friendship|%>
        <p>
            <%=friendship.name%>:
            <%= accept_friendship(friendship)%>  <%= reject_friendship(friendship)%>
        </p>
        <% end %>
    </div>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
